/* pages/home/home.wxss */
.home-container{
  background-image: url("https://ss1.bdstatic.com/70cFuXSh_Q1YnxGkpoWK1HF6hhy/it/u=1056677498,243506055&fm=26&gp=0.jpg");
  background-repeat:no-repeat;
  background-attachment: fixed;
  background-position: center;
  background-size:115% ;
  /* background-color:rgba(161, 221, 245, 0.582); */
  display:flex;
  flex-direction: column;
  margin-top:0;
}
.home-c-swiper{
  display:flex;
  width:710rpx;
  height:420rpx;
  margin:58rpx 25rpx;
  /* margin-top:50rpx; */
  
}
swiper-item{
  border-radius:25rpx;
}
swiper-item>image{
  display:flex;
  overflow:scroll;
  width:740rpx;
  height:430rpx;
}
/* z中间样式 */
.function-block{
  display:inline-block;
  /* flex-direction:column; */
  background-color:rgba(245, 245, 245, 0.896);
  border-radius:15rpx;
  border:1rpx solid rgba(245, 245, 245, 0.458);
  margin:15rpx 24rpx;
  width:710rpx;
  height:500rpx;
}
.line{
  display:flex;
  flex-direction:row;
  width:704rpx;
  height:260rpx;
  margin-right:10rpx;
}
.line-small{
  display:flex;
  flex-direction:row;
  width:710rpx;
  height:220rpx;
  margin-top:10rpx;
}
.column{
  display:flex;
  flex-direction:column;
  width:130rpx;
  height:210rpx;
}
/* 大 */
.x{
  display:flex;
  flex-direction:column;
  width:370rpx;
  height:230rpx;
  background-color:rgb(255, 223, 232);
  margin:25rpx 10rpx;
  text-align: center;
}
/* 中 */
.m{
  display:flex;
  width:159rpx;
  height:200rpx;
  background-color:rgb(247, 255, 200);
  margin:0rpx 10rpx;
}
/* 小 */
.l{
  display:flex;
  width:160rpx;
  height:90rpx;
  background-color:rgb(203, 208, 255);
  margin:8rpx 5rpx;
}
.big{
  margin-top:70rpx;
  margin-bottom:10rpx;
}
.small{
  font-size:30rpx;
  color:rgb(83, 82, 79);
  margin-top:25rpx;
  margin-right:auto;
  margin-left:auto;
}
text{
  color:rgb(63, 59, 59);
}
.m>.normal{
  margin-top:70rpx;
  margin-left:auto;
  margin-right:auto;
  text-align: center;
  font-size:30rpx;
}
.second-title{
  color:rgb(37, 37, 37);
  font-size:40rpx;
  font-weight:600;
  margin-top:15rpx;
  margin-left:34rpx;
}
.showx{
  height:400rpx;
  margin-right:auto;
  margin-left:24rpx;
  
}
.showx image{
  height:380rpx;
  width:710rpx;
  border-radius: 10rpx;
  margin:7rpx;
}
.three{
  font-weight: 400;
  font-size:34rpx;
  margin:10rpx;
}

.text-desc{
  border:1rpx solid rgb(105, 105, 105);
  font-size:24rpx;
  margin:7rpx 0;
  margin-top: 18rpx;
}
/* 字体：更多 */
.more{
  margin-left:auto;
  font-size:27rpx;
  color:rgb(148, 148, 148);
  margin-top:18rpx;
}
/* 容纳商品模型 */
.thing-model{
  display:flex;
  flex-direction: column;
  background-color:white;
  border-radius:15rpx;
  border:1rpx solid black;
  width:340rpx;
  height:360rpx;
  margin:10rpx;
}
/* 商品展览图片 */
.thing-model>.we1{
  width:340rpx;
  height:230rpx;
  border-radius: 15rpx;
}
/* 商品统一标志 */
.thing-t-model{
  font-size:22rpx;
  color:rgb(243, 112, 61);
  border:1rpx solid rgb(243,112,61);
  background-color:rgba(243, 113, 61, 0.54) ;
  width:90rpx;
  text-align: center;
  margin-top:10rpx;
  margin-bottom:7rpx;
  margin-left: 15rpx;
  margin-right:auto;
}
/* 商品名称 */
.thing-info{
  font-size:26rpx;
  margin-right: auto;
  margin-left: 12rpx;
}
/* 物品价格 */
.thing-price{
  font-size:38rpx;
  color:rgba(233, 92, 21, 0.951);
  margin-left:15rpx;
  margin-right: 25rpx;
  
}
/* 老价 */
.oldprice{
  font-size:28rpx;
  margin-right: 130rpx;
  text-decoration:line-through;
}
/* 购物车图标 */
.buy-icon{
  width:30rpx;
  height:30rpx;
  margin-left:auto;
}
/* 展示方式 */
.display-inrow{
  display:flex;
  flex-direction:row;
}
.display-incolumn{
  display:flex;
  flex-direction:column;
  margin-right:auto;
  margin-left:auto;
}



